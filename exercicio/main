void PedirDados(void);

void PedirOperador(void);

int bin_to_dec(int bin)
{
    int total  = 0;
    int potenc = 1;

    while(bin > 0) {
        total += bin % 10 * potenc;
        bin    = bin / 10;
        potenc = potenc * 2;

        //fprintf(stderr, "while\n");
    }

    return total;
}

